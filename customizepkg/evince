#customizepkg-new

# 
# Package: evince
# Version: created for 3.12.1
# 
# 

replace#pkgdesc#(PDF.*)#(PDF and XPS)
remove#global#^depends=(.*)$
remove#global#^makedepends=(.*)$
remove#optdepends#.*
add#depends#poppler-glib
add#depends#gtk3
add#depends#libgxps
add#makedepends#itstool
add#makedepends#intltool

replace#global#--enable-nautilus#--disable-nautilus
replace#global#--enable-tiff#--disable-tiff
replace#global#--enable-djvu#--disable-djvu
replace#global#--enable-dvi#--disable-dvi
replace#global#--enable-t1lib#--disable-t1lib
replace#global#--enable-comics#--disable-comics
replace#global#--enable-introspection#&=no --disable-dbus --disable-gtk-doc --disable-gtk-doc-html --disable-previewer --disable-thumbnailer --enable-xps --without-keyring --disable-nls
replace#global#make DESTDIR="$pkgdir" install#& \n rm -rf "$pkgdir"\/usr\/{include,share\/GConf,share\/applications\/evince-previewer.desktop}
