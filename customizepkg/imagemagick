remove#makedepends#ghostscript
remove#makedepends#libwmf
remove#makedepends#openexr
remove#makedepends#libwebp
remove#depends#perl
add#depends#openjpeg2
add#options#strip
replace#build#--with-modules#--disable-docs
replace#build#--enable-hdri#--disable-hdri
replace#build#--with-wmf#--without-wmf
replace#build#--with-openexr#--without-openexr
replace#build#--with-xml#--without-xml
replace#build#--with-lcms2#--without-lcms2
replace#build#--with-webp#--without-webp
replace#build#--with-perl --with-perl-options="INSTALLDIRS=vendor"#--without-perl
replace#build#--with-rsvg#--without-rsvg
replace#build#--with-gslib --with-gs-font-dir=\/usr\/share\/fonts\/Type1#--without-gslib
replace#build#--without-fftw#& --without-magick-plus-plus --with-quantum-depth=8 
remove#build#-j1
replace#global#Cleaning#&\n rm -f "${pkgdir}"\/usr\/share\/ImageMagick-6\/francais.xml \n rm -rf "${pkgdir}"\/usr\/include \n rm -rf "${pkgdir}"\/usr\/lib\/ImageMagick-6.8.9 \n  rm -f "${pkgdir}"\/usr\/bin\/*-config
